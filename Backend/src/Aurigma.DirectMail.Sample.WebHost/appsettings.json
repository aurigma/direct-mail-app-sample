{
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;Port=5432;Database=AurigmaDirectMailDb;User Id=username;Password=password;"
  },
  "EntityFramework": {
    "ApplyMigrationsOnStartup": true,
    "EnableSensitiveDataLogging": true
  },
  "AllowedHosts": "*",
  "NLog": {
    "ConfigFile": "NLog.config"
  },
  "LoggingFeatures": {
    "HttpLogging": {
      "RequestHeaders": false,
      "RequestProtocol": true,
      "RequestScheme": true,
      "RequestMethod": true,
      "RequestPath": true,
      "RequestQuery": true,
      "RequestBody": false,
      "ResponseHeaders": true,
      "ResponseStatusCode": true,
      "ResponseBody": false
    }
  },
  "CustomersCanvas": {
    // Customer's Canvas backend URL.
    "ApiGatewayUrl": "",
    // Tenant identifier.
    "TenantId": 0,
    // Storefront identifier.
    "StorefrontId": 0,
    // External application client identifier. Need to get security tokens for storefront users.
    "ClientId": "",
    // External application client secret key.
    "ClientSecret": ""
  },
  "Cors": {
    "AllowedCorsOriginsDefault": "*",
    "AllowedCorsOriginsPublic": "*"
  }
}